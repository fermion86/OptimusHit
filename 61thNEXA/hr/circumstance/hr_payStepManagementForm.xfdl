                <Column size="80"/>
              </Columns>
              <Rows>
                <Row size="24" band="head"/>
                <Row size="24"/>
              </Rows>
              <Band id="head">
                <Cell text="분류코드" font="12pt/normal &quot;a두리둥실&quot;"/>
                <Cell col="1" text="직급코드" font="12pt/normal &quot;a두리둥실&quot;"/>
