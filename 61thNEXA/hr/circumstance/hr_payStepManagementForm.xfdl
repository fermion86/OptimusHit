              </Band>
              <Band id="body">
                <Cell text="bind:DIVISION_CODE_NO" font="12pt/normal &quot;a두리둥실&quot;"/>
                <Cell col="1" edittype="text" text="bind:DETAIL_CODE" font="12pt/normal &quot;a두리둥실&quot;"/>
